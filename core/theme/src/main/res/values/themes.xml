<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения -->
    <style name="Theme.MyApp" parent="Theme.Material3.Dark">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Основные цвета -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Фон приложения -->
        <item name="android:colorBackground">@color/dark</item>
        <item name="backgroundColor">@color/dark</item>

        <item name="colorSurface">@color/light_gray</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/caption</item>

        <!-- Настройки для Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>

    </style>

    <!-- Стиль для Bottom Navigation -->
    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/dark_gray</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="selectableItemBackground">@color/light_gray</item>
    </style>

    <!-- Стиль для кнопок -->
    <style name="GreenTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/green</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="rippleColor">@color/glass</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/light_gray</item>
    </style>

    <!-- Стиль для SearchView -->
    <style name="SearchViewStyle" parent="Widget.Material3.SearchView">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/caption</item>
    </style>
</resources>